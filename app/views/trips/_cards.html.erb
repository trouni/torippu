<div class="cards-container my-5">
  <% trips_by_date = trips.group_by { |trip| trip.start_time.strftime("%Y-%m-%d") } %>
  <% trips_by_date.keys.sort.each do |date| %>
    <p class="text-center">Departing <strong><%= date.strftime("%e %b %Y") %></strong></p>
    <% trips_by_date[date].each do |trip| %>
      <%= link_to trip_path(trip) do %>
        <%= render partial: "trips/card", locals: { trip: trip } %>
      <% end %>
    <% end %>
  <% end %>
</div>
