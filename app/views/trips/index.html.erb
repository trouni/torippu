<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8">
      <h2>Trips to <%=  %></h2>
      <%@trips.each do |trip|  %>
        <div class="card">
          <div class="d-flex flex-row">
            <div class="p-2"> <%= link_to "photo", trip_path(trip) %></div>
            <div class="p-2">
              <h3><%= "#{trip.start_point} => #{trip.end_point}" %></h3>
              <h4> <%=  "#{trip.start_date} => #{trip.end_date}"%></h4>
            </div>
            <div class="p-2">
              <h3>$</h3>
              <h4><%=%>rating</h4>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
