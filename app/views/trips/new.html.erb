

<div class="row d-flex my-5 mx-0 justify-content-center align-content-center">
  <div class="col-8 col-md-6 col-lg-8 justify-content-center">
    <%= simple_form_for [@trip] do |f| %>
            <%= f.input :description%>
            <%= f.input :seats_available%>
            <%= f.input :price%>
            <%= f.input :start_point%>
            <%= f.input :end_point%>
            <%= f.input :start_date, as: :date%>
            <%= f.input :end_date, as: :date%>
            <%= f.submit class: 'btn btn-primary' %>
            <% end %>
</div>
</div>
