<div class="card-trip shadow bg-white rounded-lg m-3">
  <div class="row d-flex justify-content-between m-0 p-4">
    <div class="card-left">
      <div class="card-booking d-flex flex-wrap">
        <h3 class="card-booking-origin mr-3">
          <%="#{booking.passenger.last_name}, #{booking.passenger.last_name}" %>
        </h3>
      </div>
      <div class="card-tags">
          <h3 class="card-booking-email"><%= booking.passenger.email%></h3>
        <i class="fas fa-venus-double"></i><i class="fas fa-smoking-ban"></i>
      </div>
      <div class="card-booking-managment d-flex">
        <% if booking.approved == false && current_user == @trip.driver%>
         <div class="btn btn-primary m-3">
            <%= link_to 'approve',  trip_booking_path(booking.trip, booking)%>
            <%= render 'form', booking: booking %>
         </div>
        <% end %>
        <% if policy(booking).destroy? %>
          <div class="btn btn-danger m-3">
            <%= link_to 'cancel', booking_path(booking),
                                  method: :delete,
                                  data: { confirm: "Are you sure?" }%>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card-right d-flex flex-column justify-content-between text-right">
      <div class="card-passenger">
        <%= cl_image_tag booking.passenger.photo, class: "avatar" %>
        <h3>rating</h3>
      </div>
      <div class="card-booking-status">
        <% if booking.approved %>
          <h3>No. of <span class="card-approved">approved</span> seats:</h3>
        <% else %>
          <h3>No. of <span class="card-applied">applied</span> seats:</h3>
        <% end %>
      </div>
      <div class="card-booking-seats"><h3><%= booking.seats_number%></h3></div>
    </div>
  </div>
</div>
